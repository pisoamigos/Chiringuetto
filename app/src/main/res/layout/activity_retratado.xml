<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chiringuetto.chiringuetto.Retratado"
    android:background="@drawable/canchafutbol130613">

    <Button
        android:layout_width="155dp"
        android:layout_height="140dp"
        android:id="@+id/button"
        android:layout_gravity="left|top"
        android:background="@drawable/galeria" />

    <Button
        android:layout_width="155dp"
        android:layout_height="138dp"
        android:id="@+id/button2"
        android:layout_gravity="right|top"
        android:background="@drawable/camara" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageView5"
        android:layout_gravity="center" />

    <Button
        android:layout_width="155dp"
        android:layout_height="148dp"
        android:id="@+id/button3"
        android:layout_marginLeft="13dp"
        android:layout_gravity="left|bottom"
        android:background="@drawable/guardar" />

    <Button
        android:layout_width="155dp"
        android:layout_height="148dp"
        android:id="@+id/button4"
        android:layout_marginRight="13dp"
        android:layout_gravity="right|bottom"
        android:background="@drawable/compartir" />
</FrameLayout>
